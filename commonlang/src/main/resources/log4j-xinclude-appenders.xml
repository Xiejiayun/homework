<?xml version="1.0" encoding="UTF-8"?>
<appenders>
    <Console name="STDOUT">
        <PatternLayout pattern="%m%n"/>
    </Console>
    <File name="File" fileName="${filename}" bufferedIO="true" immediateFlush="true">
        <PatternLayout header="${java:runtime} - ${java:vm} - ${java:os}" pattern="%t %-5p %c{2} - %m%n"/>
    </File>
</appenders>